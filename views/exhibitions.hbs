{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>


    <p style="text-align: right"><a href="/new_exhibition">Add Exhibitions</a></p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Exhibition Title</th>
                <th>Description Sample</th>
                <th>View</th>
            </tr>
            </thead>
            <tbody>
            {{#each exhibitions}}
                <tr class="odd gradeX">
                    <td>{{title}}</td>
                    <td>{{sample description}}</td>
                    <td style="text-align: center"><a href="/exhibition/{{id}}">View</a></td>
            {{/each}}

            </tbody>
        </table>
    </div>

</div>




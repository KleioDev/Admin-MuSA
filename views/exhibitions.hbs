{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>



    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Exhibition Title</th>
                <th>Description Sample</th>
                <th>View</th>
            </tr>
            </thead>
            <tbody>
            {{#each exhibitions}}
                <tr class="odd gradeX">
                    <td>{{title}}</td>
                    <td>{{sample description}}</td>
                    <td style="text-align: center"><a href="/exhibition/{{id}}">View</a></td>
            {{/each}}

            </tbody>
        </table>
    </div>

    <form action="/new_exhibition" method="post">
        <div class="form-group">
            <label>Add a new exhibition:</label><br>
            <label>Title</label>
            <input id="title" type="text" name="title" class="form-control" placeholder="Enter title" style="width: 50%">
            <label>Description</label>

            <textarea id="description" type="text" name="description" class="form-control" rows="4"></textarea>
            <button class="btn btn-default" type="submit">Submit</button>

        </div>
    </form>

</div>




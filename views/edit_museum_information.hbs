{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}
            </h1>
        </div>
    </div>

    <form role="form" action="/edit_museum" method="post" enctype="multipart/form-data" >
        <div class="form-group">

            <!--<h3>Picture</h3>-->
            <!--<input type="file" name="file">-->

            <h3>Name</h3>
            <input type="text" name="name" class="form-control" placeholder="Enter museum name." value="{{museum.name}}">
            <p class="help-block">Was: {{museum.name}}</p>

            <h3>Hours</h3>
            <div class="row" >
                <div class="col-lg-2">
                    <p>Monday from</p>
                    <input class="form-control" type="time" name="mon_op" id="mon_op" value="{{museum.hoursOfOperation.monday.open}}">
                    <p>to</p>
                    <input class="form-control" type="time" name="mon_cl" id="mon_cl" value="{{museum.hoursOfOperation.monday.close}}">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="mon_closed" value="true" id="mon_closed" {{checked museum.hoursOfOperation.monday.closed}}>Closed
                        </label>
                    </div>
                </div>

                <div class="col-lg-2">
                    <p>Tuesday from</p>
                    <input class="form-control" type="time" name="tue_op" id="tue_op" value="{{museum.hoursOfOperation.tuesday.open}}">
                    <p>to</p>
                    <input class="form-control" type="time" name="tue_cl" id="tue_cl" value="{{museum.hoursOfOperation.tuesday.close}}">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="tue_closed" value="true" id="tue_closed" {{checked museum.hoursOfOperation.tuesday.closed}}>Closed
                        </label>
                    </div>
                </div>
                <div class="col-lg-2">
                    <p>Wednesday from</p>
                    <input class="form-control" type="time" name="wed_op" id="wed_op" value="{{museum.hoursOfOperation.wednesday.open}}">
                    <p>to</p>
                    <input class="form-control" type="time" name="wed_cl" id="wed_cl" value="{{museum.hoursOfOperation.wednesday.close}}">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="wed_closed" value="true" id="wed_closed" {{checked museum.hoursOfOperation.wednesday.closed}}>Closed
                        </label>
                    </div>
                </div>
                <div class="col-lg-2">
                    <p>Thursday from</p>
                    <input class="form-control" type="time" name="thu_op" id="thu_op" value="{{museum.hoursOfOperation.thursday.open}}">
                    <p>to</p>
                    <input class="form-control" type="time" name="thu_cl" id="thu_cl" value="{{museum.hoursOfOperation.thursday.close}}">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="thu_closed" value="true" id="thu_closed" {{checked museum.hoursOfOperation.thursday.closed}}>Closed
                        </label>
                    </div>
                </div>
                <div class="col-lg-2">
                    <p>Friday from</p>
                    <input class="form-control" type="time" name="fri_op" id="fri_op" value="{{museum.hoursOfOperation.friday.open}}">
                    <p>to</p>
                    <input class="form-control" type="time" name="fri_cl" id="fri_cl" value="{{museum.hoursOfOperation.friday.close}}">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="fri_closed" value="true" id="fri_closed" {{checked museum.hoursOfOperation.friday.closed}}>Closed
                        </label>
                    </div>
                </div>
                <div class="col-lg-2">
                    <p>Saturday from</p>
                    <input class="form-control" type="time" name="sat_op" id="sat_op" value="{{museum.hoursOfOperation.saturday.open}}">
                    <p>to</p>
                    <input class="form-control" type="time" name="sat_cl" id="sat_cl" value="{{museum.hoursOfOperation.saturday.close}}">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="sat_closed" value="true" id="sat_closed" {{checked museum.hoursOfOperation.saturday.closed}}>Closed
                        </label>
                    </div>
                </div>
                <div class="col-lg-2">
                    <p>Sunday from</p>
                    <input class="form-control" type="time" name="sun_op" id="sun_op" value="{{museum.hoursOfOperation.sunday.open}}">
                    <p>to</p>
                    <input class="form-control" type="time" name="sun_cl" id="sun_cl" value="{{museum.hoursOfOperation.sunday.close}}">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="sun_closed" value="true" id="sun_closed" {{checked museum.hoursOfOperation.sunday.closed}}>Closed
                        </label>
                    </div>
                </div>

            </div>

            <h3>Description</h3>
            <textarea name="description" class="form-control" placeholder="Enter short description.">{{museum.description}}</textarea>

            <h3>Phone</h3>
            <input type="tel" name="phone" class="form-control" placeholder="Enter phone." value="{{museum.phone}}">
            <p class="help-block">Was: {{museum.phone}}</p>

            <h3>Email</h3>
            <input type="email" name="email" class="form-control" placeholder="Enter email." value="{{museum.email}}">
            <p class="help-block">Was: {{museum.email}}</p>

            <h3>Location</h3>
            <input type="url" name="location" class="form-control" placeholder="Enter Google Maps link." value="{{museum.location}}">
            <p class="help-block">Was: {{museum.location}}</p>

            <h3>Terms</h3>
            <textarea name="terms" class="form-control" placeholder="Enter Terms of Service.">{{museum.terms}}</textarea>

            <h3>About</h3>
            <textarea name="about" class="form-control" placeholder="Enter about information.">{{museum.about}}</textarea>
            <br>

            <button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
            <br><br>

        </div>
    </form>


</div>
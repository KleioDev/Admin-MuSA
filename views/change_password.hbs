<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title" style="text-align: center">MuSA Administrator Reset</h3>
                </div>
                <div class="panel-body">
                    <p class="help-block">A new password will be sent to your email.</p>

                    <form role="form" action="/administrator/{{id}}" method="post" id="change">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" autofocus>
                                <p class="help-block">Enter your new password.</p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Repeat password" name="repeat" type="password" autofocus>
                                <p class="help-block">Repeat the new password.</p>
                            </div>
                            <button class="btn btn-lg btn-success btn-block" id="change_submit">Change</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
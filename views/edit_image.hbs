{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">{{title}}</h1>
        </div><br><br>
        <div class="col-lg-2">
            <a href="#" data-toggle="modal" data-target="#deleteConfirmation">
                <button class="btn btn-danger" type="submit">Delete Entry</button>
            </a>
        </div>
    </div>

    <form role="form" action="/artifact/{{ArtifactId}}/image/{{image.id}}" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" name="title" >
            <p class="help-block">Was: {{image.title}}</p>
        </div>
        <div class="form-group" >
            <label>Description</label>
            <input class="form-control" name="description">
            <p class="help-block">Was: {{image.description}}</p>

        </div>
        <div class="form-group" >
            <label>Language</label>

            <select class="form-control" style="width: 50%;">
                <option name="lang" value="eng">English</option>
                <option name="lang" value="esp">Spanish</option>

            </select>
            <p class="help-block">Was: {{language image.lang}}</p>

        </div>
        <div class="form-group" >
            <label>Image File</label>

            <input required type="file" name="file">
            <p class="help-block">Was:</p>

            <img style="max-width: 100%;height: auto;" src={{image.link}}>

        </div>

        <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <div class="modal fade" id="deleteConfirmation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Delete Entry Confirmation</h4>
                </div>
                <div class="modal-body">
                    Would you like to delete this entry?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <form action="/delete_image" method="post">
                        <input required hidden="true" name="artifact_id" value="{{artifactId}}">
                        <input hidden="true" name="image_id" value="{{image.id}}">

                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
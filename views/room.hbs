{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>



    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>iBeacon ID</th>
                <th style="text-align: center">Remove</th>
            </tr>
            </thead>
            <tbody>
            {{#each ibeacon_list}}
                <tr class="odd gradeX">
                    <td>{{id}}</td>
                    <td style="text-align: center"><a href="/remove_ibeacon/{{id}}">Remove</a></td>
            {{/each}}

            </tbody>
        </table>
    </div>

    <form action="/add_to_room" method="post">
        <div class="form-group">
            <label>To add to the exhibition, enter the ID of the desired iBeacon:</label>
            <input id="ibeacon_id" type="text" name="title" class="form-control" placeholder="Enter ID" style="width: 10%">
            <button class="btn btn-default" type="submit">Submit</button>

        </div>
    </form>

</div>




{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{object.title}}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                    <tr>
                        <td><strong>Type</strong></td>
                        <td>{{object.type}}</td>
                    </tr>
                    <tr>
                        <td><strong>Dimensions</strong></td>
                        <td>{{object.dimensions}}</td>
                    </tr>
                    <tr>
                        <td><strong>Dated</strong></td>
                        <td>{{object.dated}}</td>
                    </tr>
                    <tr>
                        <td><strong>Artist</strong></td>
                        <td>{{object.artist}}</td>
                    </tr>
                    <tr>
                        <td><strong>ID</strong></td>
                        <td>{{object.id}}</td>
                    </tr>
                    <tr>
                        <td><strong>Active</strong></td>
                        <td>{{object.active}}</td>
                    </tr>


                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-4">
            <img src="{{object.image}}" style="width:75%;height:75%">
        </div>
    </div>

    <br><br>

    <div class="panel panel-default">
        <div class="panel-heading">Extra Content</div>
        <div class="panel-body">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#audio" data-toggle="tab">Audio</a>
                </li>
                <li><a href="#video" data-toggle="tab">Video</a>
                </li>
                <li><a href="#images" data-toggle="tab">Images</a>
                </li>
                <li><a href="#text" data-toggle="tab">Text</a>
                </li>
            </ul>
            <div class="tab-content">
                <!-- AUDIO -->
                <div class="tab-pane fade in active" id="audio">
                    <br>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="panel-group" id="accordion">
                                {{#each object.audio_content}}
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseAudio{{id}}">{{title}}</a>
                                            </h4>
                                        </div>
                                        <div id="collapseAudio{{id}}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <audio controls>
                                                    <source src={{audio}} type="audio/mpeg">
                                                    Your browser does not support the audio element.
                                                </audio>
                                                <br><a href="/delete_audio/{{id}}">Delete</a>

                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseAudioUpload">Upload File</a>
                                        </h4>
                                    </div>
                                    <div id="collapseAudioUpload" class="panel-collapse collapse">
                                        <div class="panel-body">

                                            <form role="form" action="/upload_audio" method="post">
                                                <div class="form-group">
                                                    <label>New audio:</label>
                                                    <input class="form-control" placeholder="Enter title" name="title" style="width: 50%;">
                                                    <input type="file">
                                                    <br>
                                                    <button type="submit" class="btn btn-default">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>

                <!-- VIDEO -->
                <div class="tab-pane fade" id="video">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="panel-group" id="accordion">
                                {{#each object.video_content}}
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseVideo{{id}}">{{title}}</a>
                                            </h4>
                                        </div>
                                        <div id="collapseVideo{{id}}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <p>{{title}}</p>
                                                <iframe id="ytplayer" type="text/html" width="480" height="240" src="http://www.youtube.com/embed/{{embed_id}}" frameborder="0">
                                                    </iframe>


                                                <br><a href="/delete_video/{{id}}">Delete</a>

                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseVideoUpload">Add new video</a>
                                        </h4>
                                    </div>
                                    <div id="collapseVideoUpload" class="panel-collapse collapse">
                                        <div class="panel-body">

                                            <form role="form" action="/add_text" method="post">
                                                <div class="form-group">
                                                    <label>New video:</label>
                                                    <input class="form-control" placeholder="Enter title" name="title" style="width: 50%;">
                                                    <br>
                                                    <input class="form-control" placeholder="Enter youtube url" name="text" style="width: 50%;">

                                                    <br>
                                                    <button type="submit" class="btn btn-default">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- IMAGES -->
                <div class="tab-pane fade" id="images">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="panel-group" id="accordion">
                                {{#each object.image_content}}
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseImage{{id}}">{{title}}</a>
                                            </h4>
                                        </div>
                                        <div id="collapseImage{{id}}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <label>{{title}}</label><br>
                                                <img src={{image_path}}>
                                                <br><a href="/delete_image/{{id}}">Delete</a>

                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseImageUpload">Add new image</a>
                                        </h4>
                                    </div>
                                    <div id="collapseImageUpload" class="panel-collapse collapse">
                                        <div class="panel-body">

                                            <form role="form" action="/add_image" method="post">
                                                <div class="form-group">
                                                    <label>New image:</label>
                                                    <input class="form-control" placeholder="Enter title" name="title" style="width: 50%;">
                                                    <br>
                                                    <input type="file">
                                                    <br>
                                                    <button type="submit" class="btn btn-default">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- TEXT -->
                <div class="tab-pane fade" id="text">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="panel-group" id="accordion">
                                {{#each object.text_content}}
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseText{{id}}">{{title}}</a>
                                            </h4>
                                        </div>
                                        <div id="collapseText{{id}}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <label>{{title}}</label>
                                                <p>{{text}}</p>
                                                <br><a href="/delete_text/{{id}}">Delete</a>

                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseTextUpload">Add new information</a>
                                        </h4>
                                    </div>
                                    <div id="collapseTextUpload" class="panel-collapse collapse">
                                        <div class="panel-body">

                                            <form role="form" action="/add_text" method="post">
                                                <div class="form-group">
                                                    <label>New text:</label>
                                                    <input class="form-control" placeholder="Enter title" name="title" style="width: 50%;">
                                                    <br>
                                                    <textarea class="form-control" placeholder="Enter info" name="text" style="width: 50%;"></textarea>

                                                    <br>
                                                    <button type="submit" class="btn btn-default">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                </div>
            </div>

        </div>

    </div>









</div>
{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>

    <h4>Create a new notification:</h4>
    <form action="/create_notification" method="post">
        <div class="form-group">
            <input id="notification_field" type="text" name="text" class="form-control" placeholder="Enter short description.">
            <button class="btn btn-default" type="submit">Submit</button>
            </span>
        </div>
    </form>

    {{#each notifications}}
        <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-11">
                <h5>{{title}}</h5>
                <p style="font-style: italic">{{date}}</p>
            </div>
            <div class="col-lg-1">
                <a href="/remove_notification/{{id}}" style="text-align: right"><button type="button" class="btn btn-danger">Delete</button></a>
            </div>
        </div>
        </div>
    {{/each}}

</div>


{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>

    <h4>Create a new notification:</h4>
    <form action="/create_notification" method="post">
        <div class="form-group">
            <input id="notification_field" type="text" name="title" class="form-control" placeholder="Enter short description.">
            <button class="btn btn-default" type="submit" id="create_notification_submit">Submit</button>
            </span>
        </div>
    </form>
    <br>

    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="notification_table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Notification</th>
                <th>Date</th>
                <th>Remove</th>
            </tr>
            </thead>
            <tbody id="table_body">
            {{#each notifications}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{date}}</td>
                    <td style="text-align: center;"><a href="#"><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmation{{id}}">Delete</button></a></td>
                </tr>
                <div class="modal fade" id="deleteConfirmation{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Delete Notification Confirmation</h4>
                            </div>
                            <div class="modal-body">
                                Would you like to delete this entry?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <form action="/delete_notification" method="post">
                                    <input hidden="true" name="id" value="{{id}}">
                                    <button class="btn btn-danger" type="submit">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}



            </tbody>
        </table>
    </div>

</div>


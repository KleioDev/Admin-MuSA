{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>


    <div class="table-responsive" style="width: 50%">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Room</th>
                <th>Description</th>

                <th style="text-align: center">View</th>
            </tr>
            </thead>
            <tbody>
            {{#each rooms}}
                <tr class="odd gradeX">
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td style="text-align: center"><a href="/room/{{id}}"><button class="btn btn-primary">View</button></a></td>
            {{/each}}

            </tbody>
        </table>
    </div>


    <h3>Add a new room:</h3>
    <div style=" border-bottom: 1px solid #eee;"></div>
    <br>
    <form action="/new_room" method="post">
        <label>Name</label>
        <input type="text" name="name" class="form-control" style="width: 50%" placeholder="Enter name">
        <label>Description</label>
        <input type="text" name="description" class="form-control" style="width: 50%" placeholder="Enter short description">
        <button type="submit" class="btn btn-primary">Add Room</button>
    </form>
    <br>
</div>




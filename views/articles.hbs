{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">{{title}}</h1>
        </div>
        <div class="col-lg-2"><br><br>
            <a href="#"><button type="button" class="btn btn-primary">New Article</button></a>

        </div>
    </div>

    {{#each articles}}
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-lg-11">
                        <h5>{{title}}</h5>
                            <p style="font-style: italic">{{date}}</p>
                        <p>{{sample text}}</p>
                    </div>
                    <div class="col-lg-1">
                        <a href="#" style="text-align: right"><button type="button" class="btn btn-default">Edit</button></a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
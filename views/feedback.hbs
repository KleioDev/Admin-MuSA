{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="feedback_table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Message</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Solved</th>
                    <th>Change Status</th>
                </tr>
                </thead>
                <tbody>
                {{#each feedback}}
                {{#unless resolved}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{message}}</td>
                    <td>{{type}}</td>
                    <td>{{updatedAt}}</td>
                    {{#if seen}}
                        <td style="text-align: center">Solved</td>
                        <td style="text-align: center"><a href="#" data-toggle="modal" data-target="#deleteConfirmation{{id}}"><i class="fa fa-trash fa-fw"></i></a></td>

                    {{else}}
                        <td style="text-align: center">Pending</td>
                        <td style="text-align: center"><a href="#" data-toggle="modal" data-target="#solveConfirmation{{id}}"><i class="fa fa-check fa-fw"></i></a></td>

                    {{/if}}

                    <!-- Delete Feedback Entry modal -->

                    <div class="modal fade" id="deleteConfirmation{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabel">Delete Feedback Confirmation</h4>
                                </div>
                                <div class="modal-body">
                                    Would you like to delete this entry?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <form action="/delete_feedback" method="post">
                                        <input hidden="true" name="id" value="{{id}}">
                                        <button class="btn btn-danger" type="submit">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Solve Feedback Entry modal -->
                    <div class="modal fade" id="solveConfirmation{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabel">Solve Feedback Confirmation</h4>
                                </div>
                                <div class="modal-body">
                                    Would you like to solve this entry?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <form action="/solve_feedback" method="post">
                                        <input hidden="true" name="id" value="{{id}}">
                                        <button class="btn btn-primary" type="submit">Solve</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </tr>
                {{/unless}}
                {{/each}}

                </tbody>
            </table>
        </div>
    </div>







</div>
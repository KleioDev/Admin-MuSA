{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>

    <p style="text-align: right"><a href="/new_admin">Add new administrator</a></p>


    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="administrator_table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th style="text-align: center">Information</th>
            </tr>
            </thead>
            <tbody id="table_body">
            {{#each admins}}
                {{#if isAdmin}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{email}}</td>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{gender}}</td>
                    <td>{{age}}</td>
                    <td style="text-align: center"><a href="/edit_admin/{{id}}">View</a></td>


                </tr>
                {{/if}}
            {{/each}}

            </tbody>
        </table>
    </div>






</div>
{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>

    <div class="col-lg-8">
        <form role="form" action="/edit_admin" method="post">
            <div class="form-group">
                <label>First Name</label>
                <input class="form-control" id="admin_first" name="admin_first" >
                <p class="help-block">Was: {{admin.first_name}}</p>
            </div>
            <div class="form-group" >
                <label>Last Name</label>
                <input class="form-control" id="admin_last" name="admin_last">
                <p class="help-block">Was: {{admin.last_name}}</p>

            </div>
            <div class="form-group" >
                <label>Email</label>
                <input class="form-control" id="admin_email" name="admin_email">
                <p class="help-block">Was: {{admin.email}}</p>

            </div>
            <div class="form-group">
                <label>Museum</label>
                <select class="form-control" id="admin_museum" name="admin_museum">
                    <option>MuSA</option>
                </select>
                <p class="help-block">Was: [Not implemented yet]</p>

            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>

</div>
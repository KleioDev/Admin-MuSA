{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit: {{title}}</h1>
        </div>
    </div>

    <form action="/add_article" method="post">
        <div class="form-group">
            <label>Title</label>
            <input id="article_title" type="text" name="title" class="form-control" placeholder="Enter title.">
            <p class="help-block">Was: {{title}}</p>
            <label>Text</label>
            <textarea id="article_text" type="text" name="text" class="form-control" placeholder="Enter text." rows="6"></textarea>
            <p class="help-block">Was: {{text}}</p>

            <input id="article_id" type="number" name="id" class="form-control" placeholder="{{id}}" disabled="true" style="width: 25%">
            <p class="help-block">This is the article id. Cannot be edited.</p>


            <button class="btn btn-default" type="submit">Submit</button>


        </div>
    </form>





</div>
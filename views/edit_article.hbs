{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit: {{title}}</h1>
        </div>
    </div>

    <form action="/edit_article" method="post">
        <div class="form-group">
            <label>Title</label>
            <input id="article_title" type="text" name="title" class="form-control" placeholder="Enter title.">
            <p class="help-block">Was: {{title}}</p>
            <label>Text</label>
            <textarea id="article_text" type="text" name="description" class="form-control" placeholder="Enter text." rows="6"></textarea>
            <p class="help-block">Was: {{{text}}}</p>

            <input id="article_id" type="number" name="id"  value="{{id}}" hidden="true" >
            <select class="form-control" style="width: 50%;">
                <option name="lang" value="eng">English</option>
                <option name="lang" value="esp">Spanish</option>
            </select>
            <p class="help-block">Was: {{{lang}}}</p>

            <br>

            <button class="btn btn-default" type="submit">Submit</button>


        </div>
    </form>





</div>
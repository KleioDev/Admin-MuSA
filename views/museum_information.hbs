{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">{{title}}</h1>
        </div>
        <div class="col-lg-2"><br><br>
            <a href="/edit_museum_information"><button type="button" class="btn btn-default">Edit Information</button></a>
        </div>
    </div>
    <img src="{{museum.image}}" style="max-width: 100%;height: auto;">
    <br>
    <h5>Name:</h5>
    <p>{{museum.name}}</p>
    <div style="border-bottom: 1px solid darkgray;"></div>
    <h5>Hours of Operation:</h5>
    <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr><th>Days</th>
            <th>Time</th></tr>
        </thead>
        <tr><td>Monday</td>
    {{#if museum.hoursOfOperation.monday.closed}}
        <td>Closed</td>
    {{else}}
        <td>{{museum.hoursOfOperation.monday.open}} to {{museum.hoursOfOperation.monday.close}}</td>
    {{/if}}
        </tr>

        <tr><td>Tuesday</td>

    {{#if museum.hoursOfOperation.tuesday.closed}}
        <td>Closed</td>
    {{else}}
        <td>{{museum.hoursOfOperation.tuesday.open}} to {{museum.hoursOfOperation.tuesday.close}}</td>
    {{/if}}
        </tr>

        <tr><td>Wednesday</td>
    {{#if museum.hoursOfOperation.wednesday.closed}}
        <td>Closed</td>
    {{else}}
        <td>{{museum.hoursOfOperation.wednesday.open}} to {{museum.hoursOfOperation.wednesday.close}}</td>
    {{/if}}
        </tr>

        <tr><td>Thursday</td>
    {{#if museum.hoursOfOperation.thursday.closed}}
        <td>Closed</td>
    {{else}}
        <td>{{museum.hoursOfOperation.thursday.open}} to {{museum.hoursOfOperation.thursday.close}}</td>
    {{/if}}
            </tr>

        <tr><td>Friday</td>

            {{#if museum.hoursOfOperation.friday.closed}}
        <td>Closed</td>
    {{else}}
        <td>{{museum.hoursOfOperation.friday.open}} to {{museum.hoursOfOperation.friday.close}}</td>
    {{/if}}
            </tr>

        <tr><td>Saturday</td>

            {{#if museum.hoursOfOperation.saturday.closed}}
        <td>Closed</td>
    {{else}}
        <td>{{museum.hoursOfOperation.saturday.open}} to {{museum.hoursOfOperation.saturday.close}}</td>
    {{/if}}
            </tr>

        <tr><td>Sunday</td>

            {{#if museum.hoursOfOperation.sunday.closed}}
        <td>Closed</td>
    {{else}}
        <td>{{museum.hoursOfOperation.sunday.open}} to {{museum.hoursOfOperation.sunday.close}}</td>
    {{/if}}
        </tr>
    </table>
        </div>
    <div style="border-bottom: 1px solid darkgray;"></div>
    <h5>Description:</h5>
    <p>{{{museum.description}}}</p>
    <div style="border-bottom: 1px solid darkgray;"></div>
    <h5>Phone:</h5>
    <p>{{museum.phone}}</p>
    <div style="border-bottom: 1px solid darkgray;"></div>
    <h5>Email:</h5>
    <p>{{museum.email}}</p>
    <div style="border-bottom: 1px solid darkgray;"></div>
    <h5>Location:</h5>
    <a href="{{museum.location}}">Google Maps - {{museum.location}}</a>
    <div style="border-bottom: 1px solid darkgray;"></div>
    <br>

    <br>

    <a href="#" data-toggle="modal" data-target="#syncConfirmation" class="btn btn-block btn-danger">Synchronize TMS database with Kleio database</a>
    <p class="help-block">This will take the artifacts from the TMS database and transfer them with the artifacts in the Kleio database.</p>

    <div class="modal fade" id="syncConfirmation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Synchronization Confirmation</h4>
                </div>
                <div class="modal-body">
                    Would you like to synchronize databases?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <a href="/museum/sync" data-toggle="modal" data-target="#syncConfirmation" class="btn btn-danger">Sync</a>

                </div>
            </div>
        </div>
    </div>
</div>
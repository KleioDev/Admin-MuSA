{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>
    <p>{{description}}</p>

    <h4>iBeacons belonging to this exhibition:</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Code</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each beacon_list}}
                <tr class="odd gradeX">
                    <td>{{code}}</td>
                    <td style="text-align: center">
                        <form action="/remove_from_exhibition" method="post">
                            <input hidden="true" name="BeaconId" value={{id}}>
                            <input hidden="true" name="ExhibitionId" value={{../id}}>

                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
            {{/each}}

            </tbody>
        </table>
    </div>

    <h4>Objects belonging to this exhibition:</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Dimensions</th>
                <th>Date Added</th>
                <th>Artist</th>
                <th>ID</th>
                <th>Active</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each object_list}}
                <tr class="odd gradeX">
                    <td>{{title}}</td>
                    <td>{{type}}</td>
                    <td>{{dimensions}}</td>
                    <td>{{dated}}</td>
                    <td>{{artist}}</td>
                    <td>{{id}}</td>

                {{#if active}}
                        <td>Active</td>
                {{else}}
                        <td>Inactive</td>
                {{/if}}

                    <td style="text-align: center">
                        <form action="/remove_from_exhibition" method="post">
                            <input hidden="true" name="object_id" value={{id}}>
                            <input hidden="true" name="exhibition_id" value={{../id}}>

                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>    
                    </td>
            {{/each}}

            </tbody>
        </table>
    </div>

    <form action="/add_to_exhibition" method="post">
        <div class="form-group">
            <label>Add an iBeacon to the exhibition:</label>
            <input type="text" name="BeaconId" class="form-control" placeholder="Enter iBeacon" style="width: 20%">
            <p class="help-block">Enter the UUID directly followed by both Major ID's</p>
            <p class="help-block">For example this beacon:
                UUID: B9407F30-F5F8-466E-AFF9-25556B57FE6D
                Major ID: 1
                Minor ID: 2
            </p>
            <p class="help-block">Would be entered as: B9407F30-F5F8-466E-AFF9-25556B57FE6D12</p>
            <input hidden="true" name="ExhibitionId" value="{{id}}">
            <button class="btn btn-default" type="submit">Submit</button>
        </div>
    </form>




</div>
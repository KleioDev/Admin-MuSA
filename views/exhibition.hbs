{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>
    <p>{{description}}</p>


    <h4>Objects belonging to this exhibition:</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Dimensions</th>
                <th>Date Added</th>
                <th>Artist</th>
                <th>ID</th>
                <th>Active</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each object_list}}
                <tr class="odd gradeX">
                    <td>{{title}}</td>
                    <td>{{type}}</td>
                    <td>{{dimensions}}</td>
                    <td>{{dated}}</td>
                    <td>{{artist}}</td>
                    <td>{{id}}</td>

                {{#if active}}
                        <td>Active</td>
                {{else}}
                        <td>Inactive</td>
                {{/if}}

                    <td style="text-align: center"><a href="/remove_from_exhibition/{{id}}">Remove</a></td>
            {{/each}}

            </tbody>
        </table>
    </div>

    <form action="/add_to_exhibition" method="post">
        <div class="form-group">
            <label>To add to the exhibition, enter the ID of the desired object:</label>
            <input id="object_id" type="text" name="title" class="form-control" placeholder="Enter ID" style="width: 10%">
            <button class="btn btn-default" type="submit">Submit</button>

        </div>
    </form>




</div>
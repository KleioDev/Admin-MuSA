{{> navbar}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{title}}</h1>
        </div>
    </div>
    <p>{{description}}</p>

    <h4>iBeacons belonging to this exhibition:</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Code</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each Beacons}}
                <tr class="odd gradeX">
                    <td>{{code}}</td>
                    <td style="text-align: center">
                        <form action="/remove_from_exhibition" method="post">
                            <input hidden="true" name="BeaconId" value={{ExhibitionBeacon.id}}>
                            <input hidden="true" name="ExhibitionId" value={{../id}}>

                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
            {{/each}}

            </tbody>
        </table>
    </div>

    <h4>Objects belonging to this exhibition:</h4>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Dimensions</th>
                <th>Date Added</th>
                <th>ID</th>
                <th>Active</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each object_list}}
                <tr class="odd gradeX">
                    <td>{{title}}</td>
                    <td>{{type}}</td>
                    <td>{{dimensions}}</td>
                    <td>{{dated}}</td>
                    <td>{{id}}</td>

                {{#if active}}
                        <td>Active</td>
                {{else}}
                        <td>Inactive</td>
                {{/if}}

                    <td style="text-align: center">
                        <form action="/remove_from_exhibition" method="post">
                            <input hidden="true" name="object_id" value={{id}}>
                            <input hidden="true" name="exhibition_id" value={{../id}}>

                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>    
                    </td>
            {{/each}}

            </tbody>
        </table>
    </div>

    <form action="/add_to_exhibition" method="post">
        <div class="form-group">
            <label>Add an iBeacon to the exhibition:</label>
            <select name="BeaconId" class="form-control">
                <option>Select an beacon...</option>
                {{#each beacon_list}}
                    <option  value={{id}}>Room {{RoomId}} - Code: {{code}}</option>
                {{/each}}
            </select>
            <input hidden="true" name="ExhibitionId" value="{{id}}">
            <button class="btn btn-default" type="submit">Submit</button>
        </div>
    </form>




</div>